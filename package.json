{
  "name": "ixado",
  "version": "0.1.0",
  "description": "Thin, vendor-agnostic development orchestrator with Git/CI workflow control",
  "main": "src/cli/index.ts",
  "bin": {
    "ixado": "dist/ixado.exe"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run --watch src/cli/index.ts",
    "start": "bun run src/cli/index.ts",
    "build:binary": "bun build --compile --outfile dist/ixado.exe ./src/cli/index.ts",
    "package:validate": "node scripts/package-validate.mjs",
    "package:smoke": "node scripts/package-smoke.mjs",
    "package:verify": "npm run package:validate && npm run package:smoke",
    "prepack": "npm run build:binary && npm run package:verify",
    "test": "bun run test:unit && bun run test:integration",
    "test:unit": "node scripts/run-tests.mjs unit",
    "test:integration": "node scripts/run-tests.mjs integration",
    "lint": "bun run typecheck",
    "typecheck": "tsc --noEmit",
    "check": "bun run lint && bun run test"
  },
  "dependencies": {
    "grammy": "^1.40.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  }
}
